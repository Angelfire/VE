---
export interface Props {
  isRootPath: boolean
}

const { isRootPath } = Astro.props
---

<header class="sticky top-0 z-50 flex items-center justify-between p-4 backdrop-blur-xl lg:px-8">
  {
    isRootPath ? (
      <h1 class="bg-gradient-to-r from-pink-600 to-blue-600 bg-clip-text text-3xl font-black text-transparent md:text-5xl">
        <a href="/">Velocidad de Escape</a>
      </h1>
    ) : (
      <h2 class="bg-gradient-to-r from-pink-600 to-blue-600 bg-clip-text text-3xl font-black text-transparent md:text-5xl">
        <a href="/">Velocidad de Escape</a>
      </h2>
    )
  }
</header>
