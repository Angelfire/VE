---
export interface Props {
  isRootPath: boolean;
}

const { isRootPath } = Astro.props
---

<header class="flex items-center p-4 lg:px-8 justify-between sticky top-0 z-50 backdrop-blur-xl">
  {isRootPath
    ? (
      <h1 class="font-black text-3xl from-pink-600 bg-clip-text bg-gradient-to-r text-transparent to-blue-600 md:text-5xl">
        <a href="/">Velocidad de Escape</a>
      </h1>
    ): (
      <h2 class="font-black text-3xl from-pink-600 bg-clip-text bg-gradient-to-r text-transparent to-blue-600 md:text-5xl">
        <a href="/">Velocidad de Escape</a>
      </h2>
    )
  }
</header>
