---
import Metadata from "@/components/Metadata.astro"
import Footer from "@/components/Footer.astro"
import Header from "@/components/Header.astro"

import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string
  description: string
  slug?: string
}

const { description, slug, title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <Metadata title={title} description={description} slug={slug} />
    <ViewTransitions />
  </head>
  <body>
    <div class="flex min-h-screen flex-col">
      <Header isRootPath={true} />
      <main class="mt-6 flex w-full flex-1 flex-col md:mt-12">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
